<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
     
   <RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="42dp"
	   android:background="#ffffff"
	   android:orientation="horizontal">

	   <ImageView
		   android:id="@+id/back"
		   android:layout_width="60dp"
		   android:layout_height="60dp"
		   android:layout_alignParentLeft="true"
		   android:src="@drawable/back"
		   android:contentDescription="@string/hello_world" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/app_name"
	        android:textSize="22sp"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@+id/back"
			android:layout_toEndOf="@+id/back"
			android:id="@+id/textView7" />
	
    </RelativeLayout>
    
    <ScrollView 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
		<LinearLayout 
			android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
			android:weightSum="1">
		    <RelativeLayout
				android:layout_width="fill_parent"
				android:layout_height="130dp"
				android:layout_margin="0dp"
				android:padding="0dp"
				android:orientation="horizontal"
				android:layout_weight="0">
		
			    <ImageView
			       android:id="@+id/eat"
			       android:layout_width="130dp"
			       android:layout_height="130dp"
					android:contentDescription="@string/app_name"
			       android:src="@drawable/eat"
					android:layout_alignParentTop="true"
					android:layout_alignParentLeft="true"
					android:layout_alignParentStart="true" />
				
			    <ImageView
			       android:id="@+id/buy"
			       android:layout_width="130dp"
			       android:layout_height="130dp"
			       android:layout_centerInParent="true"
			       android:contentDescription="@string/app_name"
			       android:src="@drawable/buy" />
			    <ImageView
			       android:id="@+id/hotal"
			       android:layout_width="130dp"
			       android:layout_height="130dp"
					android:contentDescription="@string/app_name"
			       android:src="@drawable/hotal"
					android:layout_alignParentTop="true"
					android:layout_alignParentRight="true"
					android:layout_alignParentEnd="true" />
		    </RelativeLayout>

		    
		    <RelativeLayout
				android:layout_width="fill_parent"
				android:layout_height="130dp"
				android:layout_margin="0dp"
				android:padding="0dp"
				android:orientation="horizontal"
				android:layout_weight="0.01">
				<ImageView
			       android:id="@+id/movie"
			       android:layout_width="130dp"
			       android:layout_height="130dp"
					android:contentDescription="@string/app_name"
			       android:src="@drawable/movie"
					android:layout_alignParentTop="true"
					android:layout_alignParentLeft="true"
					android:layout_alignParentStart="true" />
			    <ImageView
			       android:id="@+id/sport"
			       android:layout_width="130dp"
			       android:layout_height="130dp"
			       android:layout_centerInParent="true"
			       android:contentDescription="@string/app_name"
			       android:src="@drawable/sport" />
			    <ImageView
			       android:id="@+id/hospita"
			       android:layout_width="130dp"
			       android:layout_height="130dp"
					android:contentDescription="@string/app_name"
			       android:src="@drawable/hospita"
					android:layout_alignParentTop="true"
					android:layout_alignParentRight="true"
					android:layout_alignParentEnd="true" />
		    </RelativeLayout>


			<RelativeLayout
				android:layout_width="fill_parent"
				android:layout_height="130dp"
				android:layout_margin="0dp"
				android:padding="0dp"
				android:orientation="horizontal"
				android:layout_weight="0.01">
				<ImageView
					android:id="@+id/park"
					android:layout_width="130dp"
					android:layout_height="130dp"
					android:contentDescription="@string/app_name"
					android:src="@drawable/park"
					android:layout_alignParentTop="true"
					android:layout_alignParentLeft="true"
					android:layout_alignParentStart="true" />
				<ImageView
					android:id="@+id/gongce"
					android:layout_width="130dp"
					android:layout_height="130dp"
					android:layout_centerInParent="true"
					android:contentDescription="@string/app_name"
					android:src="@drawable/gongce" />
				<ImageView
					android:id="@+id/fun"
					android:layout_width="130dp"
					android:layout_height="130dp"
					android:contentDescription="@string/app_name"
					android:src="@drawable/fun"
					android:layout_alignParentTop="true"
					android:layout_alignParentRight="true"
					android:layout_alignParentEnd="true" />
			</RelativeLayout>


		    <RelativeLayout
				android:layout_width="fill_parent"
				android:layout_height="130dp"
				android:layout_margin="0dp"
				android:padding="0dp"
				android:orientation="horizontal">
				<ImageView
			       android:id="@+id/atm"
			       android:layout_width="130dp"
			       android:layout_height="130dp"
					android:contentDescription="@string/app_name"
			       android:src="@drawable/atm"
					android:layout_alignParentTop="true"
					android:layout_alignParentLeft="true"
					android:layout_alignParentStart="true" />
			    <ImageView
			       android:id="@+id/bank"
			       android:layout_width="130dp"
			       android:layout_height="130dp"
			       android:layout_centerInParent="true"
			       android:contentDescription="@string/app_name"
			       android:src="@drawable/bank" />
			    <ImageView
			       android:id="@+id/book"
			       android:layout_width="130dp"
			       android:layout_height="130dp"
					android:contentDescription="@string/app_name"
			       android:src="@drawable/book"
					android:layout_alignParentTop="true"
					android:layout_alignParentRight="true"
					android:layout_alignParentEnd="true" />
		    </RelativeLayout>


		    <RelativeLayout
				android:layout_width="fill_parent"
				android:layout_height="130dp"
				android:layout_margin="0dp"
				android:padding="0dp"
				android:orientation="horizontal"
				android:layout_weight="0">
				<ImageView
			       android:id="@+id/fengjing"
			       android:layout_width="130dp"
			       android:layout_height="130dp"
					android:contentDescription="@string/app_name"
			       android:src="@drawable/fengjing"
					android:layout_alignParentTop="true"
					android:layout_alignParentLeft="true"
					android:layout_alignParentStart="true" />
			    <ImageView
			       android:id="@+id/we"
			       android:layout_width="130dp"
			       android:layout_height="130dp"
					android:contentDescription="@string/app_name"
			       android:src="@drawable/we"
					android:layout_alignParentTop="true"
					android:layout_centerHorizontal="true" />
			    <ImageView
			       android:id="@+id/bus"
			       android:layout_width="130dp"
			       android:layout_height="130dp"
					android:contentDescription="@string/app_name"
			       android:src="@drawable/bus2"
					android:layout_alignParentTop="true"
					android:layout_alignParentRight="true"
					android:layout_alignParentEnd="true" />
		    </RelativeLayout>


		    <RelativeLayout
				android:layout_width="fill_parent"
				android:layout_height="20dp"
				android:layout_marginTop="40dp"
				android:orientation="horizontal">
			    <TextView
			       android:layout_width="fill_parent"
			       android:layout_height="20dp"
			       android:layout_centerInParent="true"
			       android:gravity="center"
			       android:text="@string/more"/>
		    </RelativeLayout>
		</LinearLayout>
    </ScrollView>
</LinearLayout>
