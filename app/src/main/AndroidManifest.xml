    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/maps_a"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="8d90e53cc7f237af5c71335f89c0c61d" />

        <activity
            android:name="com.OnePaceAway.map.WelcomeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>


        <activity
            android:name="com.OnePaceAway.map.CulmenActivity"
            android:label="@string/title_activity_about" >
        </activity>

        <activity
            android:name="com.OnePaceAway.map.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.OnePaceAway.map.ChooseActivity"
            android:label="@string/title_activity_choose" >
        </activity>
        <activity
            android:name="com.OnePaceAway.map.StartActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.OnePaceAway.map.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
    </application>

</manifest>
